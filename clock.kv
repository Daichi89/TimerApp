#:kivy 2.0.0
<BackgroundColor@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundLayout@BoxLayout+BackgroundColor>:
    background_color: 0,0,0,0


<LapLayout@BoxLayout+BackgroundColor>:
    background_color: 0,0,0,0


<LapTimeLayout@BoxLayout+BackgroundColor>:
    background_color: 0,0,0,0


<WatchLabel@Label>:
    markup: True
    font_size: 120
    font_name: 'Roboto'
    on_size: self.parent.dm_size()
    bold: True

<WatchButton@Button>:
    font_size: 45
    font_name: 'Roboto'
    border: [2] * 4
    bold: True


<LapLabel@Label>:
    font_size: 45
    font_name: 'Roboto'
    bold: True


<TimeLabel@Label>:
    font_size: 45
    font_name: 'Roboto'
    bold: True


StopWatch:
    orientation: 'vertical'

    watch_prop: watch_pro
    button_lay_prop: button_lay
    reset_prop: res
    start_prop: ste
    ll_prop: ll_pro
    lt_prop: lt_pro
    lap_prop: lap_pro
    time_prop: time_pro


    WatchLabel: 
        id: watch_pro
        text: '00:00.00'
        size_hint: (1, 1)
        

    BackgroundLayout: 
        orientation: 'horizontal'
        id: button_lay
        height: 90
        padding: 20
        spacing: 20
        size_hint: (1, 0.3)

        WatchButton: 
            id: res
            text: 'Reset'
            background_normal: 'red_button_normal.png'
            background_down: 'red_button_down.png'
            on_press: self.parent.parent.cb_select()

        WatchButton: 
            id: ste
            text: 'Start'
            background_normal: 'button_normal.png'
            background_down: 'button_down.png'
            on_press: self.parent.parent.cb_start()


    LapLayout: 
        #orientation: 'vertical'
        id: ll_pro
        size_hint: (1, 0.8)

        LapTimeLayout: 
            orientation: 'horizontal'
            id: lt_pro

            LapLabel: 
                id: lap_pro
                text: 'Lap1'

            TimeLabel: 
                id: time_pro
                text: '00:00.00'