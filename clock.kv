#:kivy 2.0.0
<BackgroundColor@Widget>:
    background_color: 1, 0, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos


<BackgroundLayout@BoxLayout+BackgroundColor>:



<LapLayout@BoxLayout+BackgroundColor>:



<LapTimeLayout@BoxLayout+BackgroundColor>:
    


<WatchLabel@Label>:
    markup: True
    font_size: 120
    font_name: 'Roboto'
    on_size: self.parent.dm_size()
    #bold: True
    background_color: 0, 1, 1, 1

<WatchButton@Button>:
    font_size: 45
    font_name: 'Roboto'
    border: [2] * 4
    bold: True
    background_color: 0, 0, 0, 0
    background_normal: ''
    back_color: 1,0,0,1
    border_radius: [60, ]
    size: 120, 120
    size_hint: None, None

    canvas.before:
        Color:
            rgba: self.back_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [60, ]


<LapLabel@Label>:
    font_size: 45
    font_name: 'Roboto'
    bold: True


<TimeLabel@Label>:
    font_size: 45
    font_name: 'Roboto'
    bold: True


StopWatch:
    orientation: 'vertical'

    watch_prop: watch_pro
    button_lay_prop: button_lay
    reset_prop: res
    start_prop: ste
    ll_prop: ll_pro
    lt_prop: lt_pro
    lap_prop: lap_pro
    time_prop: time_pro


    WatchLabel: 
        id: watch_pro
        text: '00:00.00'
        size_hint: (1, 1)
        

    BackgroundLayout: 
        orientation: 'horizontal'
        id: button_lay
        #height: 90
        padding: 50
        spacing: 500
        size_hint: (1, 0.3)
        background_color: 1, 1, 0, 1

        WatchButton: 
            id: res
            text: 'Reset'
           # background_normal: '#ff6666'
            #background_down: '#797979'
            on_press: self.parent.parent.cb_select()

        WatchButton: 
            id: ste
            text: 'Start'
            background_normal: '#ff6666'
            background_down: '#797979'
            on_press: self.parent.parent.cb_start()


    LapLayout: 
        #orientation: 'vertical'
        id: ll_pro
        size_hint: (1, 0.8)

        LapTimeLayout: 
            orientation: 'horizontal'
            id: lt_pro

            LapLabel: 
                id: lap_pro
                text: 'Lap1'

            TimeLabel: 
                id: time_pro
                text: '00:00.00'